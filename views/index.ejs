<% include header %>

<script src="https://static.opentok.com/v2/js/opentok.min.js"></script>

  <div class="container bump-me">

    <div class="body-content">

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Mati liveness</h3>
        </div>
        <div class="panel-body">
          <div id="streams">
            <div id="publisher" class="media"></div>
            <div id="replay" class="media">
             <video id="video-container" controls hidden>
              Your browser does not support the video tag.
            </video>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <form class="archive-options">
              <fieldset class="archive-options-fields">
                  <div class="form-group">
                      <p class="help-block">Liveness options:</p>
                      <label class="checkbox-inline">
                          <input type="checkbox" name="hasAudio" checked> Audio
                      </label>
                      <label class="checkbox-inline">
                          <input type="checkbox" name="hasVideo" checked> Video
                      </label>
                  </div>
              </fieldset>
          </form>
          <button class="btn btn-danger start" disabled>Start recording</button>
        </div>
      </div>
    </div>
  </div>

    <script>
        const sessionId = "<%= sessionId %>";
        const apiKey = "<%= apiKey %>";
        const token = "<%= token %>";
        const focusStreamId = "<%= focusStreamId || '' %>";
        const layout = "<%= layout %>";
        const getVideoBaseUrl = "<%= getVideoBaseUrl %>";
    </script>
    <script src="/js/recording.js"></script>

  </div>

<% include footer %>
